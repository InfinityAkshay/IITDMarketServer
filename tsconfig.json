{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "removeComments": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
